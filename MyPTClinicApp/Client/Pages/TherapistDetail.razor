@page "/therapistdetail/{ID}"

@using System.Linq
@inject HttpClient Http

<h2 class="page-title">Therapist details: @Therapist.FirstName @Therapist.LastName</h2>

<br />

<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">First Name: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Therapist.FirstName</label>        
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Last Name: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Therapist.LastName</label>        
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Phone: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Therapist.Phone</label>
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Email: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Therapist.Email</label>   
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Location: </label>
    <div class="col">
        @Therapist.Location
    </div>
</div>

<h2>@Therapist.FirstName @Therapist.LastName's Patients</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th>View</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Patients)
        {
<tr>
    <td>@patient.ID</td>
    <td>@patient.FirstName</td>
    <td>@patient.LastName</td>
    <td>
        <a href="@($"patientdetail/{patient.ID}")" class="btn btn-primary table-btn">
            <i class="fas fa-info-circle"></i>
        </a>
    </td>
    <td>
        <a href="@($"patientedit/{patient.ID}")" class="btn btn-primary table-btn">
            <i class="fas fa-edit"></i>
        </a>
    </td>
</tr>            }
    </tbody>
</table>

<br />

<div>
    <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Back to therapist list</a>
</div>