@page "/therapistdetail/{ID}"

@using System.Linq
@inject HttpClient Http

<h1 class="page-title">Details for @Therapist.FirstName @Therapist.LastName</h1>

<br />

<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">First Name: </label>
    <div class="col">
        @Therapist.FirstName
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Last Name: </label>
    <div class="col">
        @Therapist.LastName
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Phone: </label>
    <div class="col">
        @Therapist.Phone
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Email: </label>
    <div class="col">
        @Therapist.Email
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Location: </label>
    <div class="col">
        @Therapist.Location
    </div>
</div>

<br />

<div>
    <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Back to overview</a>
</div>