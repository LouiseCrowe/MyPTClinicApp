@page "/"

<h1 class="page-title">Welcome to MyPTClinicApp</h1>

<div class="card-deck">
    <div class="card bg-info">
        <div class="card-body">
            <h4 class="card-title">Appointments</h4>
            <p class="card-text">
                Manage your appointments
            </p>
            <a href="allshows" class="btn btn-info btn-outline-dark btn-block stretched-link">Appointments</a>
        </div>
    </div>
    <div class="card bg-success">
        <div class="card-body">
            <h4 class="card-title">Add a new patient</h4>
            <p class="card-text">
                Add patient details
            </p>
            <a href="/patientedit" class="btn btn-success btn-outline-dark btn-block stretched-link">Add Patient</a>
        </div>
    </div>
    <div class="card bg-warning">
        <div class="card-body">
            <h4 class="card-title">Treatment</h4>
            <p class="card-text">
                Add treatment details
            </p>
            <a href="/Treatmentedit" class="btn btn-warning btn-outline-dark btn-block stretched-link">Add Treatment</a>
        </div>
    </div>

</div>
    
