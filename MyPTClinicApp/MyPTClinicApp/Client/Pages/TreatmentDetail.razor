@page "/treatmentdetail/{ID}"

@using System.Linq
@inject HttpClient Http

<h1 class="page-title">Treatment Details</h1>

<br />

<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Patient: </label>
    <div class="col">
        @Patient.FirstName @Patient.LastName
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Therapist: </label>
    <div class="col">
        @Therapist.FirstName @Therapist.LastName
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Date: </label>
    <div class="col">
        @Treatment.Date
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Treatment Notes: </label>
    <div class="col">
        @Treatment.Notes
    </div>
</div>