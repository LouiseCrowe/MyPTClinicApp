@page "/treatmentdetail/{ID}"

@using System.Linq
@inject HttpClient Http

<h1 class="page-title">Treatment Details</h1>

<br />

<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Patient: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Patient.FirstName @Patient.LastName</label>        
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Therapist: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Therapist.FirstName @Therapist.LastName</label>        
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Date: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Treatment.Date</label>
    </div>
</div>
<div class="form-group row">
    <label class="col-6 col-sm-3 col-form-label">Treatment Notes: </label>
    <div class="col">
        <label type="text" readonly class="form-control-plaintext">@Treatment.Notes</label>        
    </div>
</div>